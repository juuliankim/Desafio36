<div class="container">
    <form action="" method="POST" id="form-signup">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Ingrese su email</label>
            <input type="text" name="username" class="form-control form-text" id="email">
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">Ingrese su contraseña</label>
            <input type="text" name="password" class="form-control form-text" id="password">
        </div>
        <div class="mb-3">
            <label for="inputNombre" class="form-label">Ingrese su nombre</label>
            <input type="text" name="nombre" class="form-control form-text" id="nombre">
        </div>
        <div class="mb-3">
            <label for="inputDireccion" class="form-label">Ingrese su direccion</label>
            <input type="text" name="direccion" class="form-control form-text" id="direccion">
        </div>
        <div class="mb-3">
            <label for="inputEdad" class="form-label">Ingrese su edad</label>
            <input type="text" name="edad" class="form-control form-text" id="edad">
        </div>
        <div class="mb-3">
            <label for="inputTelefono" class="form-label">Ingrese su teléfono</label>
            <input type="text" name="telefono" class="form-control form-text" id="telfono" placeholder="Ejemplo: +543487505152">
        </div>        
        <div class="mb-3">
            <label for="inputFoto" class="form-label">Ingrese su avatar</label>
            <input type="text" name="foto" class="form-control form-text" id="foto">
        </div>
        <button class="btn btn-info mt-3">Registrar</button>
    </form>
</div>